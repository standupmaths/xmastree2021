{
    "compilerOptions": {
        "sourceMap": true,
        "noImplicitAny": false,
        "module": "commonjs", // es6
        "target": "es6", // es5
        "lib": ["es2015", "es2017", "dom"],
        "removeComments": true,
        "allowSyntheticDefaultImports": false,
        "skipLibCheck": true,
        "jsx": "react",
        "declaration": true,
        "declarationDir": "dist",
        "allowJs": true,
        "baseUrl": "./"
    },
    "include": ["./src"]
}